#inventory-window-container 
{
  width: 60%;
  height: 50%;
  left: 15%;
  top: 10%;
  padding-top: 100px;
}

.item-storage-container {
  position: absolute;
  border-radius: 20px;
  background-color: white;
}

.item-storage-items-container
{
  flex-direction: row;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: flex-start;
}

.item-storage-item-box {
  border-width: 2px;
  align-self: center;
  align-items: center;
  padding: 10px;
  width: 150px;
  height: 130px;
  opacity: 1;
  visibility: visible;
}

.item-box-inactive {
  visibility: hidden;
}

.item-box-item-image {
  -unity-background-scale-mode: scale-to-fit;
  width: 140px;
  height: 100px;
}

.item-box-item-label {
  font-size: 20px;
  color: green;
}

.item-box-floating {
  opacity: 0.5;
  position: absolute;
  border-color: red;
  border-width: 2px;
}
