#inventory-window-container {
  position: absolute;
  width: 70%;
  height: 60%;
  min-width: 60%;
  min-height: 50%;
  left: 15%;
  top: 10%;
  border-radius: 20px;
  background-color: white;
}

#inventory-window-items-container {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  flex-direction: row;
  align-items: flex-start;
}

.inventory-item-box {
  border-width: 2px;
  align-self: center;
  padding: 10px;
  min-width: 200px;
  min-height: 200px;
  opacity: 1;
  visibility: visible;
}

.inventory-item-box-inactive {
  visibility: hidden;
}

.inventory-window-item-image {
  -unity-background-scale-mode: scale-to-fit;
  width: 150px;
  height: 150px;
}

.inventory-window-item-label {
  font-size: 20px;
  color: green;
}

.inventory-floating-itembox {
  opacity: 0.5;
  position: absolute;
  border-color: red;
  border-width: 2px;
}
